<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/banner" />


            <com.e2b.views.CustomEditText
                android:id="@+id/et_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_rect_grey"
                android:gravity="center"
                android:hint="@string/enter_mobile_number"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="@dimen/dp_8"
                android:textColor="@color/color_142029"
                android:textColorHint="@color/color_B3142029"
                android:textSize="@dimen/dp_13" />


            <com.e2b.views.CustomEditText
                android:id="@+id/et_passcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_rect_grey"
                android:gravity="center"
                android:hint="@string/enter_passcode"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="@dimen/dp_8"
                android:textColor="@color/color_142029"
                android:textColorHint="@color/color_B3142029"
                android:textSize="@dimen/dp_13" />

            <com.e2b.views.MaterialRippleEffect
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_gravity="center"
                >

                <com.e2b.views.CustomTextView
                    android:id="@+id/tv_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/white_btn_round_corner_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:text="@string/sign_in"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_17" />
            </com.e2b.views.MaterialRippleEffect>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <com.e2b.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_15"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_15"
            android:text="@string/dont_have_an_account"
            android:textColor="@color/color_080808"
            android:textSize="@dimen/sp_15" />

        <com.e2b.views.CustomTextView
            android:id="@+id/tv_have_no_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_15"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_15"
            android:text="@string/sign_up"
            android:textColor="@color/color_42B757"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

</RelativeLayout>