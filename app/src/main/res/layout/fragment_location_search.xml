<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.e2b.views.CustomEditText
            android:id="@+id/et_search_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="Search Location"
            android:inputType="textCapSentences"
            android:lines="1"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:textColorHint="@color/color_929292"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/iv_contact_cross"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/cross_grey"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_26929292" />

    <TextView
        android:id="@+id/tv_no_data_available"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No Data Avaialble"
        android:visibility="gone" />

    <ListView
        android:id="@+id/list_location_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/color_26929292"
        android:dividerHeight="@dimen/dp_1" />

</LinearLayout>